{
  "extends": [
    "plugin:@cypress/dev/general",
    "plugin:@cypress/dev/tests",
    "plugin:mocha/recommended"
  ],
  "plugins": [
    "cypress",
    "@cypress/dev",
    "mocha"
  ],
  "env": {
    "cypress/globals": true
  },
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1, "MemberExpression": "off" }],
    "semi": ["error", "never"],
    "mocha/no-exclusive-tests": "error"
  }
}
